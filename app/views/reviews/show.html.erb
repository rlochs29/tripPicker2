<div class="page-header">
  <h3>Review #<%= @review.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>User</dt>
      <dd><%= (User.find(@review.user_id)).first_name %> <%= (User.find(@review.user_id)).last_name %></dd>

      <dt>Rating</dt>
      <dd><%= @review.rating %></dd>

      <dt>Body</dt>
      <dd><%= @review.body %></dd>

      <dt>Destination</dt>
      <dd><%= (Destination.find(@review.destination_id)).city %></dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/reviews" class="btn btn-primary">
        Back
      </a>
      <a href="/reviews/<%= @review.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_review/<%= @review.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>
