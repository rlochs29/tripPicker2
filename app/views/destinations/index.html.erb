<div class="page-header">
  <h1>
    Destinations
    <a href="/destinations/new" class="btn btn-lg btn-success">New Destination</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>City</th>
        <th>Country</th>
        <th>Climate</th>
        <th>Scenery</th>
        <th>Description</th>
        <th>Distance</th>
        <th>Activities</th>
        <th>Actions</th>
      </tr>

      <% @destinations.each do |destination| %>
      <tr>
        <td><%= destination.city %></td>
        <td><%= destination.country %></td>
        <td><%= destination.climate %></td>
        <td><%= destination.scenery %></td>
        <td><%= destination.description %></td>
        <td><%= destination.distance %></td>
        <td><%= destination.activities %></td>
        <td>
          <a href="/destinations/<%= destination.id %>" class="btn btn-primary">Show</a>
          <a href="/destinations/<%= destination.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_destination/<%= destination.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
